<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.co.jwlawson.nof1"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <permission
        android:name="uk.co.jwlawson.nof1.permission.RECEIVER"
        android:description="@string/receiver_permission"
        android:label="Nof1 Receiver permission"
        android:protectionLevel="signatureOrSystem" >
    </permission>

    <uses-permission android:name="uk.co.jwlawson.nof1.permission.RECEIVER" />

    <application
        android:backupAgent="Backup"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:restoreAnyVersion="false"
        android:theme="@style/Theme.Sherlock.Light.ForceOverflow" >
        <meta-data
            android:name="com.google.android.backup.api_key"
            android:value="AEdPqrEAAAAILXceBam-jxJYOgMQvg6TFIy7qQj2CNE1Tj_Kmg" />

        <activity
            android:name=".activities.MainActivity"
            android:label="@string/n_of_1_debug" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.UserPrefs"
            android:exported="false"
            android:label="@string/settings" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="uk.co.jwlawson.nof1.activities.HomeScreen" />
        </activity>
        <activity
            android:name=".activities.DoctorLogin"
            android:exported="false" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="uk.co.jwlawson.nof1.activities.UserPrefs" />
        </activity>
        <activity
            android:name=".activities.DoctorConfig"
            android:exported="false"
            android:label="@string/configuration"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="uk.co.jwlawson.nof1.activities.UserPrefs" />
        </activity>
        <activity
            android:name=".activities.FormBuilder"
            android:exported="false"
            android:label="@string/form_builder"
            android:uiOptions="splitActionBarWhenNarrow"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="uk.co.jwlawson.nof1.activities.DoctorConfig" />
        </activity>
        <activity
            android:name=".activities.Questionnaire"
            android:label="@string/data_input"
            android:uiOptions="splitActionBarWhenNarrow"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="uk.co.jwlawson.nof1.activities.HomeScreen" />
        </activity>

        <receiver
            android:name=".Receiver"
            android:permission="uk.co.jwlawson.nof1.permission.RECEIVER" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service android:name=".Scheduler" >
        </service>

        <activity
            android:name=".activities.GraphChooser"
            android:label="@string/view_graphs" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="uk.co.jwlawson.nof1.activities.HomeScreen" />
        </activity>
        <activity android:name=".activities.GraphDisplay" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="uk.co.jwlawson.nof1.activities.GraphChooser" />
        </activity>
        <activity
            android:name=".activities.About"
            android:label="@string/about" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="uk.co.jwlawson.nof1.activities.HomeScreen" />
        </activity>
        <activity android:name=".activities.HomeScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.CommentList"
            android:label="@string/title_comment_list" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="uk.co.jwlawson.nof1.activities.HomeScreen" />
        </activity>
        <activity
            android:name=".activities.CommentDetail"
            android:label="@string/title_comment_detail" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="uk.co.jwlawson.nof1.activities.CommentList" />
        </activity>
        <activity
            android:name=".activities.AddNote"
            android:label="@string/add_note" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="uk.co.jwlawson.nof1.activities.HomeScreen" />
        </activity>

        <service
            android:name=".FinishedService"
            android:exported="false" >
        </service>
    </application>

</manifest>
