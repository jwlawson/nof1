<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/config_doctor_login_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/config_doctor_login_text_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:layout_marginTop="@dimen/padding_large"
            android:text="@string/email"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/config_doctor_login_edit_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/config_doctor_login_text_email"
            android:layout_alignRight="@+id/config_doctor_login_text_email"
            android:layout_below="@+id/config_doctor_login_text_email"
            android:ems="10"
            android:inputType="textEmailAddress" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/config_doctor_login_text_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/config_doctor_login_edit_email"
            android:layout_below="@+id/config_doctor_login_edit_email"
            android:layout_marginTop="@dimen/padding_large"
            android:text="@string/password"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/config_doctor_login_edit_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/config_doctor_login_text_pass"
            android:layout_alignRight="@+id/config_doctor_login_edit_email"
            android:layout_below="@+id/config_doctor_login_text_pass"
            android:ems="10"
            android:inputType="textPassword" />
    </RelativeLayout>

</ScrollView>
