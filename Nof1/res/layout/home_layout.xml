<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_medium" >

    <Button
        android:id="@+id/home_btn_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/enter_data" />

    <Button
        android:id="@+id/home_btn_graph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/home_btn_data"
        android:text="@string/view_graphs" />

    <Button
        android:id="@+id/home_btn_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/home_btn_graph"
        android:layout_alignRight="@+id/home_btn_graph"
        android:layout_below="@+id/home_btn_graph"
        android:text="@string/view_comments" />

    <Button
        android:id="@+id/home_btn_add_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/home_btn_comment"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/home_btn_comment"
        android:text="@string/add_note" />







    <Button
        android:id="@+id/home_btn_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/home_btn_add_note"
        android:layout_alignRight="@+id/home_btn_add_note"
        android:layout_below="@id/home_btn_add_note"
        android:text="@string/email_csv"
        android:visibility="gone" />

    <Button
        android:id="@+id/home_btn_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/home_btn_add_note"
        android:layout_alignRight="@+id/home_btn_add_note"
        android:layout_below="@id/home_btn_email"
        android:text="@string/schedule"
        android:visibility="gone" />

</RelativeLayout>
