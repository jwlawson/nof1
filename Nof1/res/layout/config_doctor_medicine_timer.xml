<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/config_doctor_medicine_timer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/config_doctor_medicine_timer_edit"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:minWidth="60dp"
        android:text="@string/time"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/config_doctor_medicine_timer_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/config_doctor_medicine_timer_text"
        android:text="@string/edit" />

</RelativeLayout>